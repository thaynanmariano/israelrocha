<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.israelrochasc.app" version="1.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>Israel Rocha</name>
    <description>Participar. Engajar. Transformar.</description>
    <author email="thaynan@ideialabs.com.br" href="http://www.ideialabs.com.br">Thaynan Mariano</author>

    <preference name="phonegap-version" value="3.3.0" />
    <feature name="http://api.phonegap.com/1.0/device" />
    
    <preference name="orientation"                value="portrait" />       <!-- all: default means both landscape and portrait are enabled -->
    <preference name="phonegap-version" value="cli-6.5.0" />
    
    <!--<preference name="loadUrlTimeoutValue" value="700000" />-->
    <preference name="loadUrlTimeoutValue" value="99999999999" />
    
    <platform name="android">
	    <preference name="android-minSdkVersion" value="14" />
    </platform>
    
